<div class="create-movie-fields-div signed-in-view">

  <div class="col-xs-12">

    <div class="col-xs-5">

      <h2>Create New Movie</h2>

      <form id="create-new-movie-input-forms" class="form-inline create-new-movie-input-forms">

        <div class="form-group">
          <label for="movie-title">Movie Title*</label>
          <input id="movie-title-input" type="string" name="movie[title]" class="form-control" required>
        </div>
        <br>
        <div class="form-group">
          <label for="director">IMDB URL for Movie*</label>
          <input id="movie-title-imdb-url-input" type="string" name="movie[title_imdb_url]" class="form-control" required>
        </div>
        <br>
        <div class="form-group">
          <label for="director">Rotten Tomatoes Link for Movie</label>
          <input id="movie-title-rotten-url-input" type="string" name="movie[title_rotten_url]" class="form-control">
        </div>
        <div class="form-group">
          <label for="comment">Director*</label>
          <input id="movie-director-input" type="string" name="movie[director]" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="comment">IMDB URL for Director</label>
          <input id="movie-director-imdb-url-input" type="string" name="movie[director_imdb_url]" class="form-control">
        </div>
        <div class="form-group">
          <label for="comment">Writer*</label>
          <input id="movie-writer-input" type="string" name="movie[writer]" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="comment">IMDB URL for Writer</label>
          <input id="movie-writer-imdb-url-input" type="string" name="movie[writer_imdb_url]" class="form-control">
        </div>
        <div class="form-group">
          <label for="comment">Cinematographer*</label>
          <input id="movie-cinematographer-input" type="string" name="movie[cinematographer]" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="comment">IMDB URL for Cinematographer</label>
          <input id="movie-cinematographer-imdb-url-input" type="string" name="movie[cinematographer_imdb_url]" class="form-control">
        </div>
        <div class="form-group">
          <label for="comment">Score Composer*</label>
          <input id="movie-composer-input" type="string" name="movie[music]" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="comment">IMDB URL for Score Composer</label>
          <input id="movie-composer-imdb-url-input" type="string" name="movie[music_imdb_url]" class="form-control">
        </div>
        <div class="form-group">
          <label for="comment">Image URL for Movie*</label>
          <input id="movie-image-url-input" type="string" name="movie[img_url]" class="form-control" required>
        </div>

        <br>

        <button id="create-new-movie-input-form-button" type="submit" class="btn btn-success">Create</button>

      </form>

    </div>

  </div>

</div>
