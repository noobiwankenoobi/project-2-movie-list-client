<div class="constainer-fluid all-movies-page signed-in-view">

{{#each movies as |movie|}}
  <div class="card" style="width: 20rem;">
    <img class="card-img-top" src="{{movie.img_url}}" alt="Movie Poster">
    <div class="card-block">
      <h4 class="card-title movie-card-title">{{movie.title}}</h4>
      <p class="card-text">Director: {{movie.director}}</p>
      <a data-id="{{movie.id}}" href="#" class="btn btn-primary view-movie-page-button">View Movie</a>
    </div>
  </div>
{{/each}}

</div>
